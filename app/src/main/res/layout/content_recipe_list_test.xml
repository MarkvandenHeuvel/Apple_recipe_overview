<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mark.apple.Recipe_list_test"
    tools:showIn="@layout/activity_recipe_list_test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/verticalLayout1"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn1"
            android:src="@drawable/donkey"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn3"
            android:src="@drawable/sloth"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn5"
            android:src="@drawable/hamster"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn7"
            android:src="@drawable/hond"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn9"
            android:scaleType="fitXY"/>


        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn11"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/verticalLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/Btn2"
            android:src="@drawable/geiten"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
                android:id="@+id/Btn4"
            android:src="@drawable/giantpanda"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
                android:id="@+id/Btn6"
            android:src="@drawable/hedgehog"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
                android:id="@+id/Btn8"
            android:src="@drawable/koala"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
                android:id="@+id/Btn10"
            android:scaleType="fitXY"/>


        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
                android:id="@+id/Btn12"
            android:scaleType="fitXY"/>
    </LinearLayout>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
